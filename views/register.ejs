<%- include('partials/header') %>

<main class="register-container">
    <form class="register-form" action="/register" method="POST">
        <p class="title">Registreer</p>
        <p class="message">Meld je nu aan en krijg volledige toegang tot de game</p>

        <label>
            <input required type="text" name="username" class="input">
            <span>Gebruikersnaam</span>
        </label>

        <label>
            <input required type="email" name="email" class="input">
            <span>Email</span>
        </label>

        <label>
            <input required type="password" name="password" class="input" id="password">
            <span>Wachtwoord</span>
            <div class="password-requirements">
                <i class="fas fa-info-circle"></i>
                <div class="tooltip">
                    Wachtwoord vereisten:
                    <ul>
                        <li>Minimaal 8 tekens</li>
                        <li>Minstens 1 hoofdletter</li>
                        <li>Minstens 1 kleine letter</li>
                        <li>Minstens 1 nummer</li>
                        <li>Minstens 1 speciaal teken (!@#$%^&*)</li>
                    </ul>
                </div>
            </div>
        </label>

        <label>
            <input required type="password" name="confirmPassword" class="input" id="confirm-password">
            <span>VerifieÃ«r wachtwoord</span>
        </label>

        <button type="submit" class="submit">Submit</button>
        <p class="signin">Heb je al een account ? <a href="/login">Log-in</a> </p>
    </form>
</main>

<%- include("partials/footer") %>
